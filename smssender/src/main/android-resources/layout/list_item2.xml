<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:padding="2dip" android:id="@+id/item">

	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginRight="5dip" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/icon"
		android:layout_centerVertical="true" android:orientation="vertical">
		<TextView android:id="@+id/firstLine" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000"
			android:textSize="19dip" android:textStyle="bold" />
		<TextView android:id="@+id/secondLine" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000"
			android:textSize="15dip" />
			<!-- 
		<CheckBox android:id="@+id/cb1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
 				-->
	</LinearLayout>
</RelativeLayout>    