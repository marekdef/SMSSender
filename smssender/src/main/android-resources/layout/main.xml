<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/topLayaout">
	<DatePicker android:id="@+id/dataPicker"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<net.retsat1.starlab.android.timepicker.DetailedTimePicker
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/detailedTimePicker" />
	<AutoCompleteTextView android:id="@+id/numberEditText"
		android:hint="@string/number_hint" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<EditText android:id="@+id/messageEditText" android:hint="@string/message_hint"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<Button android:id="@+id/send_button" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/send_text"></Button>
	<ListView android:id="@+id/smsList" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
</LinearLayout>
